@model IEnumerable<SEYRİ_ALA.Models.City>

@{
    ViewData["Title"] = "Favori Şehirlerim";
}

<div class="container mt-5 pt-4">
    <h2 class="fw-bold mb-4 text-primary"><i class="fas fa-heart text-danger me-2"></i>Kalbimdeki Şehirler</h2>

    @if (!Model.Any())
    {
        @* FAVORİ LİSTESİ BOŞSA BURASI ÇALIŞIR *@
        <div class="text-center py-5 shadow-sm mt-5" style="border-radius: 30px; background: rgba(255,255,255,0.05); backdrop-filter: blur(10px);">
            <div class="mb-4">
                <i class="fas fa-map-marked-alt fa-5x text-muted opacity-50"></i>
            </div>
            <h3 class="fw-bold text-secondary">Henüz kalbinizi çalan bir şehir olmamış...</h3>
            <p class="text-muted mb-4 fs-5">Anadolu'nun binbir güzelliği keşfedilmeyi bekliyor.</p>
            <a href="/Home/Index#discovery-area" class="btn btn-primary btn-lg rounded-pill px-5 shadow">
                ✨ Keşfetmeye Başla
            </a>
        </div>
    }
    else
    {
        @* FAVORİ LİSTESİ DOLUYSA BURASI ÇALIŞIR *@
        <div class="row g-4">
            @foreach (var city in Model)
            {
                <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                    <div class="card city-card border-0 shadow-sm h-100" style="border-radius: 25px; overflow: hidden; cursor:pointer;"
                         onclick="window.location.href='/Home/Details/@city.Id'">

                        <div class="position-relative">
                            <img src="https://loremflickr.com/400/250/@city.Name,city/all" class="card-img-top" style="height: 180px; object-fit: cover;">
                            <div class="position-absolute top-0 end-0 p-3">
                                <span class="badge bg-white text-danger rounded-pill shadow-sm">❤️ Favori</span>
                            </div>
                        </div>

                        <div class="card-body p-3 text-center">
                            <h5 class="fw-bold text-primary">@city.Name</h5>
                            <p class="text-muted small text-truncate">@city.Description</p>
                            <button class="btn btn-outline-primary btn-sm rounded-pill w-100 mt-2">Detayları Gör</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    /* Kartların üzerine gelince hafifçe büyümesi için */
    .city-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .city-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1) !important;
        }
</style>